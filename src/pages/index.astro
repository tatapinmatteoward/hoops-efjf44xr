---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Hoops Central - Your Ultimate Basketball Hub";
const pageDescription = "Discover the latest basketball news, expert analysis, and comprehensive training resources at Hoops Central, the go-to destination for hoops enthusiasts worldwide.";

const latestNews = [
  { id: 1, title: "Breaking: LeBron's latest milestone â€“ Is he still the King?", category: "NBA", time: "2h ago" },
  { id: 2, title: "NCAA Buzz: March Madness predictions and underdog stories.", category: "College", time: "4h ago" },
  { id: 3, title: "Global View: FIBA World Cup insights and rising stars.", category: "International", time: "1d ago" }
];

const featuredPlayers = [
  { name: "LeBron James", team: "LAL", points: 28.5, rebounds: 8.2, assists: 7.4 },
  { name: "Luka Doncic", team: "DAL", points: 31.2, rebounds: 9.1, assists: 8.7 },
  { name: "Giannis Antetokounmpo", team: "MIL", points: 30.8, rebounds: 12.3, assists: 5.6 }
];

const trainingSections = [
  { title: "Shoot Like a Pro", description: "Master the perfect shot form with our expert tutorials", icon: "fa-basketball-ball" },
  { title: "Footwork Fundamentals", description: "Build the foundation of elite court movement", icon: "fa-shoe-prints" },
  { title: "Defense Mastery", description: "Learn how to become a lockdown defender", icon: "fa-shield-alt" }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-red-700 via-red-600 to-orange-500 py-24 md:py-32 overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl">
        <span class="inline-block px-3 py-1 bg-yellow-500 text-red-900 font-bold rounded-full mb-4">NEW SEASON ALERT</span>
        <h1 class="text-4xl md:text-6xl font-bold text-white leading-tight mb-6">
          Welcome to <span class="text-yellow-400">Hoops Central</span>
        </h1>
        <p class="text-xl text-red-100 mb-8 max-w-2xl">
          Your ultimate hub for basketball news, analysis, and training
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="px-8 py-4 bg-white text-red-700 font-bold rounded-lg hover:bg-red-100 transition-all duration-300 transform hover:scale-105 shadow-lg">
            Explore Latest News
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-lg hover:bg-white hover:text-red-700 transition-all duration-300">
            Training Resources
          </button>
        </div>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-black to-transparent"></div>
  </div>

  <!-- Latest News Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">Latest News</h2>
        <a href="#" class="text-red-600 font-bold flex items-center hover:text-red-800">
          View All News
          <i class="fas fa-arrow-right ml-2"></i>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {latestNews.map((news) => (
          <div key={news.id} class="bg-white rounded-xl overflow-hidden shadow-xl transform transition duration-500 hover:scale-105">
            <div class="h-48 bg-gradient-to-r from-red-500 to-orange-400 relative">
              <span class="absolute top-4 right-4 px-3 py-1 bg-white text-red-600 font-bold rounded-full text-sm">
                {news.category}
              </span>
            </div>
            <div class="p-6">
              <div class="text-sm text-gray-500 mb-2">{news.time}</div>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{news.title}</h3>
              <button class="text-red-600 font-bold flex items-center hover:text-red-800">
                Read More
                <i class="fas fa-chevron-right ml-2 text-sm"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Players Section -->
  <section class="py-16 bg-gradient-to-br from-red-900 to-red-700">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-16">Top Performers</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredPlayers.map((player, index) => (
          <div key={index} class="bg-white bg-opacity-10 backdrop-blur-lg rounded-2xl p-6 border border-white border-opacity-20">
            <div class="flex items-center mb-6">
              <div class="w-16 h-16 rounded-full bg-gradient-to-r from-yellow-400 to-orange-500 flex items-center justify-center text-white font-bold text-xl mr-4">
                {player.name.charAt(0)}
              </div>
              <div>
                <h3 class="text-xl font-bold text-white">{player.name}</h3>
                <p class="text-red-200">{player.team}</p>
              </div>
            </div>
            
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-red-200">Points</span>
                <span class="font-bold text-white">{player.points}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-red-200">Rebounds</span>
                <span class="font-bold text-white">{player.rebounds}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-red-200">Assists</span>
                <span class="font-bold text-white">{player.assists}</span>
              </div>
            </div>
            
            <div class="mt-6 pt-4 border-t border-white border-opacity-20">
              <div class="flex justify-between text-sm text-red-200">
                <span>PERFORMANCE RATING</span>
                <span class="font-bold text-yellow-400">9.2/10</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Training Resources Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Training Resources</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Elevate your game with our comprehensive training programs designed by NBA professionals
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {trainingSections.map((section, index) => (
          <div key={index} class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:-translate-y-2">
            <div class="h-48 bg-gradient-to-r from-yellow-400 to-orange-500 flex items-center justify-center">
              <i class={`text-6xl text-white ${section.icon}`}></i>
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-bold text-gray-900 mb-3">{section.title}</h3>
              <p class="text-gray-600 mb-4">{section.description}</p>
              <button class="text-red-600 font-bold flex items-center hover:text-red-800">
                Explore Training
                <i class="fas fa-chevron-right ml-2"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-red-700 to-red-900">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Level Up?</h2>
      <p class="text-red-100 max-w-2xl mx-auto mb-10 text-xl">
        Join thousands of basketball enthusiasts sharing tips, strategies, and passion
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="px-8 py-4 bg-white text-red-700 font-bold rounded-lg hover:bg-red-50 transition-all duration-300 transform hover:scale-105">
          Get Started Today
        </button>
        <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-lg hover:bg-white hover:text-red-700 transition-all duration-300">
          View Community
        </button>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .hover-scale:hover {
    transform: scale(1.05);
  }
</style>
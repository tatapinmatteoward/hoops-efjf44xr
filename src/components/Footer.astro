---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-[#dc2626] text-white py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="text-xl font-bold mb-4">Hoops Central</p>
    <p class="mb-4">&copy; {currentYear} Hoops Central. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-white hover:text-[#f59e0b] transition-colors duration-300 text-2xl">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>